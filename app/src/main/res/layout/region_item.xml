<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/regionImageView"
        android:layout_width="340dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_select_region" />

    <TextView
        android:id="@+id/regionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_button_text"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/regionImageView"
        app:layout_constraintEnd_toStartOf="@+id/deleteRegionButton"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/regionImageView"
        app:layout_constraintTop_toTopOf="@+id/regionImageView" />

    <ImageButton
        android:id="@+id/deleteRegionButton"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/regionImageView"
        app:layout_constraintEnd_toEndOf="@+id/regionImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/regionImageView"
        app:layout_constraintTop_toTopOf="@+id/regionImageView"
        app:srcCompat="@drawable/black_button_delete_region" />

</androidx.constraintlayout.widget.ConstraintLayout>